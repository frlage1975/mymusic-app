<div class="container mx-auto px-4">
  <div class="my-8">
    <h1 class="text-3xl font-bold mb-4"><%= @album.title %></h1>
    <% if @album.image.present? %>
      <img src="<%= @album.image %>" alt="<%= @album.title %>" class="w-64 h-64 object-cover mb-4">
    <% end %>
    
    <div class="my-4">
      <h2 class="text-lg font-semibold">Genre:</h2>
        <p> <%= @album.category.name %></p>
      <h2 class="text-lg font-semibold">Artists:</h2>
      <% @album.artists.each do |artist| %>
        <%= link_to artist.name, artist_path(artist), class:"p-3 text-sm text-blue-500 hover:text-gray-700 focus:text-blue-700 no-underline" %><br>
      <% end %>
    </div>

    <div class="my-4">
      <h2 class="text-lg font-semibold">Songs:</h2>
      <table class="min-w-full bg-white border border-gray-300 mt-4">
        <tbody>
          <% @album.songs.each do |song| %>
            <tr>
              <td class="py-2 px-4 border-b"><%= song.title %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="my-8 text-center">
    <%= link_to "Back to Albums", albums_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>