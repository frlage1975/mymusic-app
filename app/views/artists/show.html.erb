<div class="container mx-auto px-4">
  <div class="my-8">
    <h1 class="text-3xl font-bold mb-4"><%= @artist.name %></h1>
    <% if @artist.country.present? %>
      <p class="text-lg"><strong>Country:</strong> <%= @artist.country.name %></p>
    <% end %>

    <div class="my-4">
      <h2 class="text-lg font-semibold">Albums:</h2>
      <div class="flex justify-center mt-4">
        <% @artist.albums.each do |album| %>
          <%= link_to album_path(album) do %>
            <div class="bg-white p-4 rounded-lg shadow-md mx-2">
              <% if album.image.present? %>
                <%= image_tag album.image, class: "w-48 h-48 object-cover mb-2 mx-auto cursor-pointer" %>
              <% end %>
              <div class="text-center">
                <%= link_to album.title, album_path(album), class:"p-3 text-sm text-blue-500 hover:text-gray-700 focus:text-blue-700 no-underline" %><br>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="my-8 text-center">
    <%= link_to "Back to Artists", artists_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-4" %>
    <%= link_to "Back to Albums", albums_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
